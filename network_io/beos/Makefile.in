CC=@CC@
RANLIB=@RANLIB@
CFLAGS=@CFLAGS@ @OPTIM@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@ $(LIBS)
INCDIR=../../include -I../../file_io/unix
INCLUDES=-I$(INCDIR) -I.
MKDEP=../../helpers/mkdep.sh

LIB=libnetwork.a

OBJS=poll.o \
	sendrecv.o \
	sockets.o \
	sockopt.o \
        inet_aton.o \
        sockaddr.o

.c.o:
	$(CC) $(CFLAGS) -c $(INCLUDES) $<

all: $(LIB)

clean:
	$(RM) -f *.o *.a *.so

distclean: clean
	-$(RM) -f Makefile


$(LIB): $(OBJS)
	$(RM) -f $@
	$(AR) cr $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(MKDEP) $(INCLUDES) $(CFLAGS) *.c

# DO NOT REMOVE
